---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const wszystkieWystawy = (await getCollection('wystawy'))
  .sort((a, b) => b.data.rok - a.data.rok);

const lata = [...new Set(wszystkieWystawy.map(w => w.data.rok))].sort().reverse();
const typy = ['indywidualna', 'zbiorowa'];
---

<Layout title="Wystawy">
  <main class="strona-wystaw">
    <header class="strona-header">
      <h1>Wystawy</h1>
      <p class="opis">Przegląd wystaw indywidualnych i&nbsp;zbiorowych.</p>
    </header>

    <div class="filtry">
      <select id="filtr-rok-wystaw" class="filtr-select">
        <option value="">Wszystkie lata</option>
        {lata.map(rok => <option value={rok}>{rok}</option>)}
      </select>

      <select id="filtr-typ-wystaw" class="filtr-select">
        <option value="">Wszystkie typy</option>
        {typy.map(typ => (
          <option value={typ}>{typ}</option>
        ))}
      </select>
    </div>

    <div class="lista-wystaw">
      {wszystkieWystawy.map((wystawa) => (
        <article 
          class="wystawa-item" 
          data-rok={wystawa.data.rok}
          data-typ={wystawa.data.typ}
        >
        <div class="wystawa-item-inner">
          <div class="wystawa-naglowek">
            <span class="wystawa-meta">
              {wystawa.data.rok} · {wystawa.data.typ}
            </span>
            <h2 class="wystawa-tytul">{wystawa.data.tytul}</h2>
          </div>

          {wystawa.data.opis && (
            <p class="wystawa-opis-krotki">{wystawa.data.opis}</p>
          )}

          {wystawa.data.opis_pelny && (
            <div class="wystawa-opis-pelny">
              <p>{wystawa.data.opis_pelny}</p>
            </div>
          )}

          {wystawa.data.linki_media && wystawa.data.linki_media.length > 0 && (
            <div class="wystawa-linki">
              <span class="wystawa-linki-label">Relacje medialne:</span>
              <ul class="wystawa-linki-lista">
                {wystawa.data.linki_media.map((link) => {
                  const domain = new URL(link).hostname.replace('www.', '');
                  return (
                    <li>
                      <a href={link} target="_blank" rel="noopener noreferrer">
                        {domain} →
                      </a>
                    </li>
                  );
                })}
              </ul>
            </div>
          )}
          </div>
        </article>
      ))}
    </div>
  </main>
</Layout>

<script>
  const filtrRok = document.getElementById('filtr-rok-wystaw');
  const filtrTyp = document.getElementById('filtr-typ-wystaw');

  function filtruj() {
    const rok = filtrRok?.value || '';
    const typ = filtrTyp?.value || '';

    document.querySelectorAll('.wystawa-item').forEach((item) => {
      const el = item;
      const pokazRok = !rok || el.dataset.rok === rok;
      const pokazTyp = !typ || el.dataset.typ === typ;
      el.style.display = (pokazRok && pokazTyp) ? 'block' : 'none';
    });
  }

  filtrRok?.addEventListener('change', filtruj);
  filtrTyp?.addEventListener('change', filtruj);
</script>

<style>
  .strona-wystaw {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* === HEADER === */
  .strona-header {
    text-align: center;
    padding: 6rem 0 3rem;
  }

  .strona-header h1 {
    margin-bottom: 1rem;
  }

  .opis {
    font-size: 1.125rem;
    opacity: 0.6;
    font-weight: 300;
  }

  /* === FILTRY === */
  .filtry {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    padding: 2rem 0 4rem;
  }

  .filtr-select {
    font-family: 'Inter', sans-serif;
    font-size: 0.9rem;
    padding: 0.875rem 2rem;
    border: 1px solid #000;
    background: #FDFCFA;
    color: #000;
    cursor: pointer;
    transition: all 0.3s ease;
    letter-spacing: 0.02em;
  }

  .filtr-select:hover {
    background: #F5F3F0;
  }

  /* === LISTA WYSTAW === */
  .lista-wystaw {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
    padding-bottom: 6rem;
  }


  .wystawa-card {
    display: block;
  }

  .wystawa-linki {
    margin-top: 0.8rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem 1rem;
    align-items: baseline;
  }

.wystawa-linki-label {
  font-family: 'Inter', sans-serif;
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  opacity: 0.6;
}

  .wystawa-linki-lista {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem 0.8rem;
    padding: 0;
    margin: 0;
  }

  .wystawa-linki-lista a {
    font-family: 'Inter', sans-serif;
    font-size: 0.85rem;
    text-decoration: none;
    color: #000;
    border-bottom: 1px solid rgba(0, 0, 0, 0.3);
    padding-bottom: 1px;
    opacity: 0.8;
    transition: opacity 0.2s ease, border-color 0.2s ease;
  }

  .wystawa-linki-lista a:hover {
    opacity: 1;
    border-bottom-color: #000;
  }

  .wystawa-link {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    text-decoration: none;
    color: #000;
    align-items: center;
  }

  .wystawa-item {
    padding: 2rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }


  @media (max-width: 768px) {
    .wystawa-link {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  /* === MINIATURA === */
  .wystawa-miniatura {
    position: relative;
    overflow: hidden;
  }

  .wystawa-img {
    width: 100%;
    height: auto;
    aspect-ratio: 3/2;
    object-fit: cover;
    display: block;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .wystawa-link:hover .wystawa-img {
    transform: scale(1.05);
  }

  /* === INFO === */
  .wystawa-info {
    padding: 1rem 0;
  }

  .wystawa-rok {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    opacity: 0.5;
    margin-bottom: 1rem;
  }

  .wystawa-tytul {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    letter-spacing: -0.02em;
    line-height: 1.2;
    border-bottom: none;
    display: block;
  }

  .wystawa-opis-krotki {
    font-size: 0.95rem;
    line-height: 1.6;
    opacity: 0.7;
    margin: 0.6rem 0 0.4rem;
  }

  .wystawa-opis-pelny {
    margin-top: 0.6rem;
  }

  .wystawa-opis-pelny p {
    font-size: 0.9rem;
    line-height: 1.7;
    opacity: 0.6;
    white-space: pre-line;
  }

  .wystawa-czytaj {
    font-family: 'Inter', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    transition: opacity 0.3s ease;
  }

  .wystawa-link:hover .wystawa-czytaj {
    opacity: 0.6;
  }

  @media (max-width: 640px) {
    .strona-header {
      padding: 4rem 0 2rem;
    }
    
    .lista-wystaw {
      gap: 3rem;
    }
    
    .wystawa-tytul {
      font-size: 1.5rem;
    }
  }

  @media (min-width: 900px) {
  .wystawa-item-inner {
    max-width: 760px;
    margin: 0 auto; /* lżejsze, trochę bliżej środka */
  }

</style>
