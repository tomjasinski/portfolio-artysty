---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (async () => {
  const wystawy = await getCollection('wystawy');
  return wystawy.map(wystawa => ({
    params: { slug: wystawa.id },
    props: { wystawa },
  }));
}) satisfies GetStaticPaths;

const { wystawa } = Astro.props;
const { Content } = await wystawa.render();
---

<Layout title={`${wystawa.data.tytul} – Wystawa`}>
  <main class="szczegoly-wystawy">
    <article>
      <header class="wystawa-header">
        <span class="wystawa-rok-tag">
          {wystawa.data.rok} · {wystawa.data.typ}
        </span>
        <h1>{wystawa.data.tytul}</h1>

        {wystawa.data.opis && (
          <p class="wystawa-lead">{wystawa.data.opis}</p>
        )}
      </header>

      {wystawa.data.miniatura && (
        <div class="wystawa-miniatura-glowna">
          <Image 
            src={wystawa.data.miniatura}
            alt={wystawa.data.tytul}
            width={1200}
            class="miniatura-img"
          />
        </div>
      )}

      <div class="wystawa-tresc">
        <Content />
      </div>

      {wystawa.data.zdjecia && wystawa.data.zdjecia.length > 0 && (
        <section class="wystawa-galeria">
          <h2>Zdjęcia z wystawy</h2>
          <div class="galeria-siatka" id="galeria-wystawy">
            {wystawa.data.zdjecia.map((zdjecie, idx) => (
              <a 
                href={zdjecie.src}
                class="galeria-item-wystawa"
                data-pswp-width={zdjecie.width}
                data-pswp-height={zdjecie.height}
                target="_blank"
                rel="noreferrer"
              >
                <Image 
                  src={zdjecie}
                  alt={`${wystawa.data.tytul} – zdjęcie ${idx + 1}`}
                  width={400}
                  class="galeria-img-wystawa"
                />
              </a>
            ))}
          </div>
        </section>
      )}

      {wystawa.data.linki_media && wystawa.data.linki_media.length > 0 && (
        <section class="wystawa-media">
          <h2>Relacje medialne</h2>
          <ul class="lista-mediow">
            {wystawa.data.linki_media.map((link) => {
              const domain = new URL(link).hostname.replace('www.', '');
              return (
                <li>
                  <a href={link} target="_blank" rel="noopener noreferrer" class="link-medium">
                    {domain} →
                  </a>
                </li>
              );
            })}
          </ul>
        </section>
      )}

      <div class="nawigacja-powrot">
        <a href="/wystawy" class="btn-powrot">← Powrót do wystaw</a>
      </div>
    </article>
  </main>
</Layout>

<script>
  import PhotoSwipeLightbox from 'photoswipe/lightbox';
  import PhotoSwipe from 'photoswipe';
  import 'photoswipe/style.css';

  const galeriaElement = document.getElementById('galeria-wystawy');
  
  if (galeriaElement) {
    const lightbox = new PhotoSwipeLightbox({
      gallery: '#galeria-wystawy',
      children: 'a',
      pswpModule: PhotoSwipe,
      showHideAnimationType: 'fade',
      zoomAnimationDuration: 400,
      bgOpacity: 0.95,
    });
    
    lightbox.init();
  }
</script>

<style>
  .szczegoly-wystawy {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* === HEADER === */
  .wystawa-header {
    padding: 6rem 0 3rem;
    text-align: center;
  }

  .wystawa-rok-tag {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    opacity: 0.5;
    margin-bottom: 1.5rem;
  }

  .wystawa-header h1 {
    margin-bottom: 1.5rem;
  }

  .wystawa-lead {
    font-size: 1.25rem;
    line-height: 1.7;
    opacity: 0.7;
    font-weight: 300;
    max-width: 700px;
    margin: 0 auto;
  }

  /* === MINIATURA === */
  .wystawa-miniatura-glowna {
    margin: 3rem 0;
  }

  .miniatura-img {
    width: 100%;
    height: auto;
    aspect-ratio: 16/9;
    object-fit: cover;
  }

  /* === TREŚĆ === */
  .wystawa-tresc {
    padding: 3rem 0;
    line-height: 1.8;
  }

  .wystawa-tresc :global(p) {
    margin-bottom: 1.5rem;
    font-size: 1.0625rem;
  }

  .wystawa-tresc :global(h2),
  .wystawa-tresc :global(h3) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  /* === GALERIA WYSTAWY === */
  .wystawa-galeria {
    padding: 4rem 0;
    border-top: 1px solid #000;
  }

  .wystawa-galeria h2 {
    text-align: center;
    margin-bottom: 3rem;
  }

  .galeria-siatka {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .galeria-siatka {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .galeria-siatka {
      grid-template-columns: 1fr;
    }
  }

  .galeria-item-wystawa {
    display: block;
    overflow: hidden;
    cursor: zoom-in;
  }

  .galeria-img-wystawa {
    width: 100%;
    height: auto;
    aspect-ratio: 1;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .galeria-item-wystawa:hover .galeria-img-wystawa {
    transform: scale(1.1);
  }

  /* === MEDIA === */
  .wystawa-media {
    padding: 3rem 0;
    border-top: 1px solid #000;
  }

  .wystawa-media h2 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .lista-mediow {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .link-medium {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    text-decoration: none;
    color: #000;
    padding: 1rem 1.5rem;
    border: 1px solid #000;
    display: block;
    transition: all 0.3s ease;
  }

  .link-medium:hover {
    background: #000;
    color: #FDFCFA;
  }

  /* === POWRÓT === */
  .nawigacja-powrot {
    padding: 4rem 0 6rem;
    text-align: center;
  }

  .btn-powrot {
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
    text-decoration: none;
    color: #000;
    padding: 1rem 2rem;
    border: 1px solid #000;
    display: inline-block;
    transition: all 0.3s ease;
    font-weight: 400;
  }

  .btn-powrot:hover {
    background: #000;
    color: #FDFCFA;
  }

  @media (max-width: 640px) {
    .wystawa-header {
      padding: 4rem 0 2rem;
    }
    
    .wystawa-lead {
      font-size: 1.125rem;
    }
  }
</style>
